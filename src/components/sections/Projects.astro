---
import Section from "../Section.astro"
import {projects} from"@cv"
---
<Section title="Projects">
    <ul>
        {
            projects.map(({url,description,highlights,name,isActive}) =>{
                return(
                    <li>
                    <article>
                    <header>
                        <h3>
                        <a href={url} title={`Ver el proyecto ${name}`}>
                        {name}
                        {
                            isActive==='Active'&&<span class="active">&bull;</span>
                        }
                        {
                            isActive==='Proccess'&&<span class="proccess">&bull;</span>
                        }
                        {
                            isActive==='Disabled'&&<span class="disable">&bull;</span>
                        }
                        {
                            isActive==='Complete'&&<span class="complete">&bull;</span>
                        }
                        </a>
                        </h3>
                        <p>{description}</p>
                    </header>
                    <footer>
                        <ul>
                            {
                                highlights.map((highlights)=>{
                                    return <span>{highlights}</span>
                                })
                            }
                            </ul>
                    </footer>
                    </article>    
                    </li>
                )
            })
        }
    </ul>
</Section>
<style>
    ul{
    display: grid;
    grid-template-columns: repeat(
        auto-fit,minmax(200px,1fr)
    );
    gap: 1rem;
    }
    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap:16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }
    article header{
        flex: 1;
    }
    article h3{
        margin-bottom: 4px;
    }
    article h3 span{
        
    }
    .active{
        color: #00af09;
    }
    .complete{
        color: #0ebec4;
    }
    .proccess{
        color: #e49114;
    }
    .disable{
        color: #e71313;
    }
    article a{
        color: #111;
    }
    article a:hover{
        text-decoration: underline;
    }
    article p{
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }
    footer{
        display:flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }
    footer span{
        border-radius: 6px;
        background:#eee;
        color: #444;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>