---
import Section from "../Section.astro"
import {education, awards, certificates,languages} from  "@cv"
---
<Section title="Education">
    <ul>
        {
            education.map(
                ({institution,area,studyType,startDate,endDate,score,courses})=>{
                    const startYear = new Date(startDate).getFullYear()
                    const endYear = endDate != null ? new Date(endDate).getFullYear(): "Actual"
                    const years = startYear != endYear ? `${startYear} - ${endYear}`: `${startYear}`
                    return(
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{institution}</h3>
                                        <h4>{area} {studyType}</h4>
                                    </div>
                                    <time>{years}</time>
                                    </header>
                                    <footer>
                                        <!--{courses} -->

                                        
                                    </footer>
                            </article>    
                        </li>
                    )
                }
            )
           

        }
        {
             awards.map(
                ({title,date})=>{
                    return(
                        <li>
                            <article>
                                <header>
                                    <div>
                                    <h3>Premios</h3>
                                    <h4>{title}</h4>
                                    </div>
                                    <time>{date}</time>
                                    </header>
                                   
                                </article>
                            </li>
                    )
                }
            )
        }
        {
            certificates.map(
                ({name,date,issuer,url})=>{
                    return(
                        <li>
                            <article>
                                <header>
                                    <div>
                                        
                                        </div>
                                    </header>
                                </article>
                            </li>
                    )
                }
            )
        }
        {
            languages.map(
                ({language,fluency})=>{
                    return(
                        <li>
                            <article>
                                <header>
                                    <div>
                                        
                                        </div>
                                    </header>
                                </article></li>
                    )
                }
            )
        }
    </ul>
</Section>
<style>
    ul{
        display: flex;
        flex-direction: column;
    }
    article h3{
        color: #111;
    }
    article h4{
        color: #222;
        font-weight: 400;
    }
    header{
        display:flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }
    time{
        color: #555;
        font-size: 0.85rem;
    }
   
</style>